  "name": "Three section layout",
  "settings": [
    {
      "type": "header",
      "content": "Upper section"
    },
    {
      "type": "image_picker",
      "id": "upper_image",
      "label": "Upper image"
    },
    {
      "type": "range",
      "id": "upper_image_height",
