{% doc %}
  @prompt
    Create a Shopify custom section named gift-banner.liquid.
    The section should have a horizontal layout with 3 parts:
    
    Left (Heading): A text field for the title (default: "TISSO VISION").
    
    Center (Description): A text field for small description (default: "Find the ideal gift for your loved ones.").
    
    Right (Button): A customizable button (default label: "CHOOSE GIFT", background yellow, with arrow icon â†’).

{% enddoc %}
{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gift-banner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: {{ section.settings.padding_vertical }}px {{ section.settings.padding_horizontal }}px;
    background-color: {{ section.settings.background_color }};
    gap: 20px;
    flex-wrap: wrap;
  }

  .ai-gift-banner__heading-{{ ai_gen_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0;
    flex: 1;
    min-width: 200px;
  }

  .ai-gift-banner__description-{{ ai_gen_id }} {
    color: {{ section.settings.description_color }};
    font-size: {{ section.settings.description_size }}px;
    margin: 0;
    flex: 2;
    text-align: center;min-width: 250px;
  }

  .ai-gift-banner__button-wrapper-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    min-width: 200px;
  }

  .ai-gift-banner__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-gift-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};transform: translateY(-2px);
  }

  .ai-gift-banner__arrow-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .ai-gift-banner__button-{{ ai_gen_id }}:hover .ai-gift-banner__arrow-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  @media screen and (max-width: 768px) {
    .ai-gift-banner-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 16px;
    }

    .ai-gift-banner__heading-{{ ai_gen_id }},
    .ai-gift-banner__description-{{ ai_gen_id }} {
      min-width: auto;
      flex: none;
    }

    .ai-gift-banner__button-wrapper-{{ ai_gen_id }} {
      justify-content: center;
      min-width: auto;
      flex: none;
    }

    .ai-gift-banner__heading-{{ ai_gen_id }} {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    .ai-gift-banner__description-{{ ai_gen_id }} {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-gift-banner-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  {% if section.settings.heading != blank %}
    <h2 class="ai-gift-banner__heading-{{ ai_gen_id }}">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% if section.settings.description != blank %}
    <p class="ai-gift-banner__description-{{ ai_gen_id }}">
      {{ section.settings.description }}
    </p>
  {% endif %}

  <div class="ai-gift-banner__button-wrapper-{{ ai_gen_id }}">
    {% if section.settings.button_label != blank %}
      <a
        href="{{ section.settings.button_link | default: '#' }}"
        class="ai-gift-banner__button-{{ ai_gen_id }}"
      >
        {{ section.settings.button_label }}
        {% if section.settings.show_arrow %}
          <svg
            class="ai-gift-banner__arrow-{{ ai_gen_id }}"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        {% endif %}
      </a>
    {% endif %}
  </div>
</div>

