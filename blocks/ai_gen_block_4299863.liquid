    },
    {
      "type": "header",
      "content": "Content styling"
    },
    {
      "type": "range",
      "id": "content_padding",
      "min": 20,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Content padding",
      "default": 32
    },
    {
      "type": "color",
      "id": "content_background_color",
      "label": "Content background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
