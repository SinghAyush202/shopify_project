{% doc %}
  @prompt
     in section it has two images one in upper side with full width and other is in lower half with half width and other half should have content section with a button, can you update the layout by having image at right in lower half and text and button in right side of the lower half

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-image-content-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};}

  .ai-split-image-content__upper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
  }

  .ai-split-image-content__upper-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.upper_image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-split-image-content__upper-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.upper_image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-split-image-content__upper-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-split-image-content__upper-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
  }

  .ai-split-image-content__lower-{{ ai_gen_id }} {
    display: flex;
    align-items: stretch;
    min-height: {{ block.settings.lower_section_height }}px;
  }

  .ai-split-image-content__content-{{ ai_gen_id }} {
    flex: 0 0 50%;
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: {{ block.settings.content_background_color }};
    order: 1;
  }

  .ai-split-image-content__lower-image-{{ ai_gen_id }} {
    flex: 0 0 50%;
    position: relative;
    order: 2;
  }

  .ai-split-image-content__lower-image-img-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-split-image-content__lower-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-split-image-content__lower-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-split-image-content__lower-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
  }

  .ai-split-image-content__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .ai-split-image-content__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 24px 0;
  }

  .ai-split-image-content__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    align-self: flex-start;
    border: none;
    cursor: pointer;
  }

  .ai-split-image-content__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-split-image-content__lower-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-split-image-content__content-{{ ai_gen_id }} {
      order: 1;
      flex: none;
      padding: {{ block.settings.content_padding | times: 0.8 }}px;
    }

    .ai-split-image-content__lower-image-{{ ai_gen_id }} {
      order: 2;
      flex: none;
      height: {{ block.settings.lower_section_height | times: 0.6 }}px;
    }

    .ai-split-image-content__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-split-image-content__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-split-image-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-image-content__upper-{{ ai_gen_id }}">
    {% if block.settings.upper_image %}
      <img
        src="{{ block.settings.upper_image | image_url: width: 2000 }}"
        alt="{{ block.settings.upper_image.alt | escape }}"
        class="ai-split-image-content__upper-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.upper_image.width }}"
        height="{{ block.settings.upper_image.height }}"
      >
    {% else %}
      <div class="ai-split-image-content__upper-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-split-image-content__upper-empty-state-{{ ai_gen_id }}">
          Add an upper image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-split-image-content__lower-{{ ai_gen_id }}">
    <div class="ai-split-image-content__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-split-image-content__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-split-image-content__text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-split-image-content__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-split-image-content__lower-image-{{ ai_gen_id }}">
      {% if block.settings.lower_image %}
        <img
          src="{{ block.settings.lower_image | image_url: width: 1000 }}"
          alt="{{ block.settings.lower_image.alt | escape }}"
          class="ai-split-image-content__lower-image-img-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.lower_image.width }}"
          height="{{ block.settings.lower_image.height }}"
        >
      {% else %}
        <div class="ai-split-image-content__lower-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-split-image-content__lower-empty-state-{{ ai_gen_id }}">
            Add a lower image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

