{% doc %}
  @prompt
    Create a Shopify custom section named gift-banner.liquid.
    The section should have a horizontal layout with 3 parts:
    
    Left (Heading): A text field for the title (default: "TISSO VISION").
    
    Center (Description): A text field for small description (default: "Find the ideal gift for your loved ones.").
    
    Right (Button): A customizable button (default label: "CHOOSE GIFT", background yellow, with arrow icon â†’).

{% enddoc %}
{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gift-banner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: {{ section.settings.padding_vertical }}px {{ section.settings.padding_horizontal }}px;
    background-color: {{ section.settings.background_color }};
    gap: 20px;
    flex-wrap: wrap;}

  .ai-gift-banner__heading-{{ ai_gen_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0;
    flex: 1;
    min-width: 200px;
  }

  .ai-gift-banner__description-{{ ai_gen_id }} {
    color: {{ section.settings.description_color }};
    font-size: {{ section.settings.description_size }}px;
    margin: 0;
    flex: 2;
    text-align: center;min-width: 250px;
  }

  .ai-gift-banner__button-wrapper-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    min-width: 200px;
  }

  .ai-gift-banner__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-gift-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
  }

  .ai-gift-banner__arrow-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    stroke: currentColor;
  }

  @media screen and (max-width: 768px) {
    .ai-gift-banner-{{ ai_gen_id }} {
      flex-direction: {{ section.settings.mobile_layout }};
      text-align: center;
      gap: 16px;
    }

    .ai-gift-banner__heading-{{ ai_gen_id }},
    .ai-gift-banner__description-{{ ai_gen_id }},
    .ai-gift-banner__button-wrapper-{{ ai_gen_id }} {
      flex: none;
      min-width: auto;
      width: 100%;
    }

    .ai-gift-banner__description-{{ ai_gen_id }} {
      text-align: center;}

    .ai-gift-banner__button-wrapper-{{ ai_gen_id }} {
      justify-content: center;
    }
  }
{% endstyle %}

<div class="ai-gift-banner-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <h2 class="ai-gift-banner__heading-{{ ai_gen_id }}">
    {{ section.settings.heading }}
  </h2>
  
  <p class="ai-gift-banner__description-{{ ai_gen_id }}">
    {{ section.settings.description }}
  </p>
  
  <div class="ai-gift-banner__button-wrapper-{{ ai_gen_id }}">
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="ai-gift-banner__button-{{ ai_gen_id }}">{% else %}
      <span class="ai-gift-banner__button-{{ ai_gen_id }}">
    {% endif %}
      {{ section.settings.button_label }}
      {% if section.settings.show_arrow %}
        <svg class="ai-gift-banner__arrow-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12,5 19,12 12,19"></polyline>
        </svg>
      {% endif %}
    {% if section.settings.button_link != blank %}
      </a>
    {% else %}
      </span>
    {% endif %}
  </div>
</div>

