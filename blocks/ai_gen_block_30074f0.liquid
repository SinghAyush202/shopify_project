{% doc %}
  @prompt
    the output should be seen as there should be 3 section one upper half in which we have to add a image and in lower half there should be 2 part and right should have image and lefty should have content and a button

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-three-section-layout-{{ ai_gen_id }} {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-three-section-upper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: {{ block.settings.section_spacing }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-three-section-upper-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.upper_image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-three-section-upper-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.upper_image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-three-section-upper-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-three-section-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-three-section-lower-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.section_spacing }}px;
    align-items: center;
  }

  .ai-three-section-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    background-color: {{ block.settings.content_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-three-section-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px 0;
    line-height: 1.3;
  }

  .ai-three-section-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0 0 24px 0;
  }

  .ai-three-section-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-three-section-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-three-section-lower-image-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-three-section-lower-image-{{ ai_gen_id }} img {
    width: 100%;
    height: {{ block.settings.lower_image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-three-section-lower-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.lower_image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-three-section-lower-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  @media screen and (max-width: 768px) {
    .ai-three-section-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.5 }}px;
    }

    .ai-three-section-lower-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.section_spacing | times: 0.75 }}px;
    }

    .ai-three-section-content-{{ ai_gen_id }} {
      order: 2;
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }

    .ai-three-section-lower-image-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-three-section-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-three-section-upper-image-{{ ai_gen_id }},
    .ai-three-section-upper-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.upper_image_height | times: 0.7 }}px;
    }

    .ai-three-section-lower-image-{{ ai_gen_id }} img,
    .ai-three-section-lower-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.lower_image_height | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-three-section-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-three-section-upper-{{ ai_gen_id }}">
    {% if block.settings.upper_image %}
      <img
        src="{{ block.settings.upper_image | image_url: width: 1200 }}"
        alt="{{ block.settings.upper_image.alt | escape }}"
        class="ai-three-section-upper-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.upper_image.width }}"
        height="{{ block.settings.upper_image.height }}"
      >
    {% else %}
      <div class="ai-three-section-upper-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-three-section-empty-state-{{ ai_gen_id }}">
          Add an image for the upper section
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-three-section-lower-{{ ai_gen_id }}">
    <div class="ai-three-section-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-three-section-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.text != blank %}
        <div class="ai-three-section-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}
      
      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link | default: '#' }}"
          class="ai-three-section-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div><div class="ai-three-section-lower-image-{{ ai_gen_id }}">
      {% if block.settings.lower_image %}
        <img
          src="{{ block.settings.lower_image | image_url: width: 600 }}"
          alt="{{ block.settings.lower_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.lower_image.width }}"
          height="{{ block.settings.lower_image.height }}"
        >
      {% else %}
        <div class="ai-three-section-lower-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}<div class="ai-three-section-empty-state-{{ ai_gen_id }}">
            Add an image for the lower section
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

