{% doc %}
  @prompt
    add a horizontal box which content three things horizontaly 
    1- TISSCO VISION
    2- Find the ideal gifts for your loved ones
    3 - CHOOSE GIFT -->
    and 3rd should be button which
    and 1st one should be at left and 2nd should be in middle and 3rd should be at right

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-horizontal-box-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    gap: 20px;
    width: 100%;
    box-sizing: border-box;
  }

  .ai-horizontal-box__vision-{{ ai_gen_id }} {
    flex: 0 0 auto;
    font-size: {{ block.settings.vision_font_size }}px;
    font-weight: {{ block.settings.vision_font_weight }};
    color: {{ block.settings.vision_color }};
    text-transform: {{ block.settings.vision_text_transform }};
    letter-spacing: {{ block.settings.vision_letter_spacing }}px;
  }

  .ai-horizontal-box__message-{{ ai_gen_id }} {
    flex: 1;
    text-align: center;
    font-size: {{ block.settings.message_font_size }}px;
    color: {{ block.settings.message_color }};
    line-height: 1.4;
  }

  .ai-horizontal-box__button-{{ ai_gen_id }} {
    flex: 0 0 auto;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
  }

  .ai-horizontal-box__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-horizontal-box-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }

    .ai-horizontal-box__message-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-horizontal-box__vision-{{ ai_gen_id }} {
      font-size: {{ block.settings.vision_font_size | times: 0.9 }}px;
    }

    .ai-horizontal-box__message-{{ ai_gen_id }} {
      font-size: {{ block.settings.message_font_size | times: 0.9 }}px;
    }

    .ai-horizontal-box__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-horizontal-box-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-horizontal-box__vision-{{ ai_gen_id }}">
    {{ block.settings.vision_text }}
  </div>
  
  <div class="ai-horizontal-box__message-{{ ai_gen_id }}">
    {{ block.settings.message_text }}
  </div><a 
    href="{{ block.settings.button_link }}" 
    class="ai-horizontal-box__button-{{ ai_gen_id }}"
  >
    {{ block.settings.button_text }}
  </a>
</div>

